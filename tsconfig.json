{
  "compilerOptions": {
    "target": "ESNext",
    "module": "ESNext",
    "lib": ["dom", "esnext"],
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "resolveJsonModule": true,
    "isolatedModules": true,
    "outDir": "dist",
    "moduleResolution": "Bundler",
    "jsx": "react-jsx",
    "declaration": true,
    "noEmit": false,
  },
  "include": [
    "src/**/*"
  ]
}